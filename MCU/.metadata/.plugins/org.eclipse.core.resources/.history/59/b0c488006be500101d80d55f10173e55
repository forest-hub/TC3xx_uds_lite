/*********************************************************************************************************************/
/*-----------------------------------------------------Macros--------------------------------------------------------*/
/*********************************************************************************************************************/
#define LED1_BLINKY_PERIOD_MS (250)                         /* The period (in milliseconds) at which LED1 will blink */
extern IfxPort_Pin_Config          test_Pin1;                     /* MCU ms synchronous tigger      */
extern IfxPort_Pin_Config          test_Pin2;                     /* MCU ms synchronous tigger      */
extern IfxCan_Can_Node                g_mcmcanNode[8];
/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
/* Initialization function for LED1 app */
uint32 taskcun;

extern devcanfdRXringbuff RxBuff0;
extern devcanfdRXringbuff RxBuff1;
extern devcanfdRXringbuff RxBuff2;
extern SemaphoreHandle_t can0_xSemaphore ;
extern SemaphoreHandle_t can1_xSemaphore ;
extern SemaphoreHandle_t can2_xSemaphore ;
/* Task which runs the LED1 app */
void task_uart(void *arg)
{

    while (1)
    {
        /* Toggle LED1 state */
        taskcun++;
       // Ifx_Console_print("uart test %d\r\n",taskcun);
        /* Delay 250ms */
        vTaskDelay(pdMS_TO_TICKS(1000));
    }
}


void task_led(void *arg)
{

    while (1)
    {
        /* Toggle LED1 state */
        IfxPort_togglePin(test_Pin1.port, test_Pin1.pinIndex);

        /* Delay 250ms */
        vTaskDelay(pdMS_TO_TICKS(250));
    }
}


void task_uds(void *arg)
{
    while (1)
    {
        uds_main ();
        /* Delay 250ms */
        vTaskDelay(pdMS_TO_TICKS(1));
    }
}

void task_can0_Rx(void *arg)
{
    while(1)
    {
        if (xSemaphoreTake( can0_xSemaphore, 100)==pdTRUE)
        {
            usr_Can_readMessage(&g_mcmcanNode[0], 1, &RxBuff0);
            //Ifx_Console_print("can id:%04x - %02x%02x%02x%02x %02x%02x%02x%02x\r\n",RxBuff0.messageid,RxBuff0.rxData[0],
             //       RxBuff0.rxData[1],RxBuff0.rxData[2],RxBuff0.rxData[3],RxBuff0.rxData[4],RxBuff0.rxData[5],RxBuff0.rxData[6],RxBuff0.rxData[7]);
            //uds_get_frame (0,RxBuff0.rxData, RxBuff0.dlc);
        }
        vTaskDelay(pdMS_TO_TICKS(1));

    }
}


void task_can1_Rx(void *arg)
{
    while(1)
    {
        if (xSemaphoreTake( can1_xSemaphore, 100)==pdTRUE)
        {
            usr_Can_readMessage(&g_mcmcanNode[1], 1, &RxBuff1);
            Ifx_Console_print("can id:%04x - %02x%02x%02x%02x %02x%02x%02x%02x - len:%d\r\n",RxBuff1.messageid,
                    RxBuff1.rxData[0],RxBuff1.rxData[1],RxBuff1.rxData[2],RxBuff1.rxData[3],RxBuff1.rxData[4],
                    RxBuff1.rxData[5],RxBuff1.rxData[6],RxBuff1.rxData[7],RxBuff1.dlc);

            //根据ID 区分使用物理寻址还是功能寻址
             //#define UDS_PHYSREQ_CANID    0x766
               //#define UDS_FUNCREQ_CANID    0x7DF
              //#define UDS_RESPOND_CANID    0x706

            if(RxBuff1.messageid == UDS_PHYSREQ_CANID)
            {
                uds_get_frame (0,RxBuff1.rxData, RxBuff1.dlc);
            }else if(RxBuff1.messageid == UDS_FUNCREQ_CANID){
                uds_get_frame (1,RxBuff1.rxData, RxBuff1.dlc);
            }else{};//丢弃既不是物理寻址ID，也不是功能寻址ID
        }
        vTaskDelay(pdMS_TO_TICKS(1));
    }
}


void task_can2_Rx(void *arg)
{
    while(1)
    {
        if (xSemaphoreTake( can2_xSemaphore, 100)==pdTRUE)
        {
            usr_Can_readMessage(&g_mcmcanNode[2], 1, &RxBuff2);

           // uds_get_frame (0,RxBuff2.rxData, RxBuff2.dlc);
        }

        vTaskDelay(pdMS_TO_TICKS(1));
    }
}


void can_rx_create(void)
{
    xTaskCreate(task_can0_Rx, "task can0 Rx", configMINIMAL_STACK_SIZE, NULL, 10, NULL);
    xTaskCreate(task_can1_Rx, "task can1 Rx", configMINIMAL_STACK_SIZE, NULL, 11, NULL);
    xTaskCreate(task_can2_Rx, "task can2 Rx", configMINIMAL_STACK_SIZE, NULL, 12, NULL);

}



